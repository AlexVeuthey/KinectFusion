addpath(genpath('data'));

figN = 1;

bunny = pcread('bun_zipper.ply');

figure(figN)
figN = figN + 1;
pcshow(bunny);
xlabel('X');
ylabel('Y');
zlabel('Z');

rot = [
    1 0 0 0 
    0 cos(3pi/2) -sin(3pi/2) 0
    0 sin(pi/2) cos(pi/2) 0
    0 0 0 1
    ];

transform = affine3d(rot);

bunny2 = pctransform(bunny,transform);

figure(figN)
pcshow(bunny2);
xlabel('X');
ylabel('Y');
zlabel('Z');